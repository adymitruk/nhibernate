<?xml version="1.0" ?>
<project xmlns="http://nant.sf.net/release/0.85/nant.xsd">

	<include buildfile="common.xml"/>

	<!-- TODO: Add checks for required properties -->

	<property name="output.dir" value="${project.dir}/output"/>

	<mkdir dir="${output.dir}"/>

	<target name="common.run-tests"
		description="Run NUnit tests">

		<nunit2>
			<formatter
				type="Xml"
				usefile="true"
				extension=".xml"
				outputdir="${output.dir}"
			/>
			<test
				assemblyname="${output.dir}\${project::get-name()}.dll"
				appconfig="${output.dir}\${project::get-name()}.dll.config" />
		</nunit2>

	</target>

</project>